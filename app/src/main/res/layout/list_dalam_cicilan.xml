<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvDC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:id="@+id/npeminjamc"
            android:layout_marginBottom="3dp"
            android:textSize="13sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Peminjam Disini"/>
        <TextView
            android:id="@+id/totalDC"
            android:textSize="13sp"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Pinjaman Disini"/>
        <TextView
            android:id="@+id/sisa"
            android:textSize="13sp"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sisa Cicilan Disini"/>
        <TextView
            android:id="@+id/tenor"
            android:textSize="13sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tenor"
            android:layout_marginBottom="8dp"/>
        <Button
            android:id="@+id/btnLunas"
            android:textSize="13sp"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="lunasin"
            android:textColor="#fff"
            android:background="@drawable/buttoninside"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

