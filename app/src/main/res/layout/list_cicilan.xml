<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/headerdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14.5sp"
            style="@style/teksDetailHead"
            android:text="Cicilan ke"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                style="@style/teksDetail"
                android:textSize="13sp"
                android:text="Jumlah Pinjaman"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/jumlahbayar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                style="@style/teksDetail"
                android:textSize="13sp"
                android:text="Jumlah Pinjaman disini"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                style="@style/teksDetail"
                android:textSize="13sp"
                android:text="Jatuh Tempo"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/jatuhTempo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/teksDetail"
                android:textSize="13sp"
                android:layout_marginBottom="4dp"
                android:text="Jatuh Tempo"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                style="@style/teksDetail"
                android:textSize="13sp"
                android:text="Status"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/statusBayar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/teksDetail"
                android:textSize="13sp"
                android:layout_marginBottom="4dp"
                android:text="Status"/>


        </LinearLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>