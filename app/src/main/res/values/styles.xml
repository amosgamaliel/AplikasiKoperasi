<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>
    <style name="fullscreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="text">
        <item name="android:fontFamily">@font/firasansbook</item>
    </style>

    <style name="card_dashboard">
    <item name="android:layout_width">120dp</item>
    <item name="android:layout_height">220dp</item>
    <item name="android:layout_marginTop">4dp</item>
    <item name="android:clickable">true</item>
    <item name="android:topLeftRadius">8dp</item>
    <item name="android:foreground">?android:attr/selectableItemBackground</item>
    <item name="android:src">@color/colorPrimary</item>
    </style>

    <style name="EditText" parent="text">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="colorControlActivated">#014689</item>
        <item name="colorControlNormal">#595959</item>
        <item name="colorControlHighlight">#014689</item>
        <item name="colorAccent">#014689</item>
        <item name="android:textSize">10sp</item>

    </style>
    <style name="label">
        <item name="android:textColor">@color/colorPrimary</item>

    </style>

</resources>
